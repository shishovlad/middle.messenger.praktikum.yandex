<div class="form__control{{#if error}} has-error{{/if}}">
  {{#if label}}
    <label for="{{name}}">{{label}}</label>
  {{/if}}
  <input
    id="{{name}}"
    name="{{name}}"
    type="{{type}}"
    value="{{value}}"
    placeholder="{{placeholder}}"
  />
  {{#if error}}
    <p>{{error}}</p>
  {{/if}}
</div>

<section class='chat'>
  <div class='chatlist'>
    <div class='chatlist__head'>
      <a href='/profile/settings'>Профиль</a>
      <form>
        <input type='text' name='message' placeholder='🔍 Поиск' />
      </form>
    </div>

    <div class='chatlist__body'>
      {{{chats}}}
    </div>
  </div>

  <div class='dialog'>
    {{{dialogHeader}}}
    <div class='dialog__body'>
      {{{messages}}}
    </div>
    {{{dialogFooter}}}
  </div>
</section>
